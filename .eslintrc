{
  "env": {
    "node": true,
    "es6": true
  },
  //sorted as on wiki
  "rules": {
    //Possible Errors
    "quote-props": 2,
    "valid-jsdoc": [2, {
      "requireReturn": false
    }],
    //Best Practices
    "block-scoped-var": 2,
    "complexity": [2, 6],
    "default-case": 2,
    "guard-for-in": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "radix": 2,
    "wrap-iife": [2, "inside"],
    //Strict Mode - no item
    //Variables - no item
    //Stylistic Issues
    "brace-style": 2,
    "comma-style": [2, "last"],
    "func-style": [2, "declaration"],
    "max-nested-callbacks": [2, 3],
    "no-multiple-empty-lines": [2, {
      "max": 1
    }],
    //Legacy
    "max-depth": [1, 3],
    "max-len": [2, 120, 4],
    "max-params": [1, 7],
    "no-bitwise": 2,
    "semi-spacing": 2,
    "quotes": [2, "double"],
    "space-before-function-paren": [2, "always"],
    "keyword-spacing": ["error", {"before": true, "after": true, "overrides": {}}],
    "space-before-blocks": [2, "always"],
    "object-curly-spacing": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "computed-property-spacing": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-unary-ops": [2, {
      "words": true,
      "nonwords": false
    }]
  },
  "globals": {
    "pzt": true
  }
}
